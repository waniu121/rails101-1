<%= form_for @group do |f| -%>

<div class="form-group">
  <div class="form-group string optional">
    <%= f.label "title", :class => "string optional control form-control" %>
    <%= f.text_field :title, :calss => "string optional form-control form-conttol" %>
  </div>

  <div class="form-group string optional">
    <%= f.label "description", :class => "string optional control-label" %>
    <%= f.text_area :description, :calss => "string optional form-control" %>
  </div>

</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
